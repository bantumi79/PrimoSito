<p id="notice"><%= notice %></p>

<h1>Contents</h1>

<table class="highlight striped responsive-table">
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Utente</th>
      <th>Email</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <% if content.user == current_user %> 
      <tr>
        <td><%= content.titolo %></td>
        <td><%= content.descrizione %></td>
        <td><%= content.user.name if content.user %></td>
        <td><%= content.user.email if content.user %></td>
        <td><%= content.price %></td>
        <td><%= link_to 'Show', content_path(content) %></td>
        <% if content.user == current_user %>          
          <td><%= link_to 'Edit', edit_content_path(content) %></td>
          <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Content', new_content_path %>
